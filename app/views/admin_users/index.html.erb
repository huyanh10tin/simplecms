	<% @page_title ="All Admin Users"%>
	<%= link_to("<< Back to menu",access_menu_path,:class => 'back-link')%>
	<div class="admin-users index">
		<h2>Admin Users</h2>
		<%= image_tag('plus_sign.png',:size => '11x11',:alt => '+')%>
		<%= link_to("Add New Admin User", new_admin_user_path,:class => 'action new') %>	
		<div><%= pluralize(@admins.size,'Admin User') %> Found!</div>
		<table class="listing" summary="Admin users list">
			<tr>
				<th>User Name</th>
				<th>Name</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
			<% @admins.each do |admin|%>
				<tr>
					<td><%= admin.username %></td>
					<td><%= admin.name %></td>
					<td><%= mail_to(admin.email)%></td>
					<td class="actions">
						<%= link_to("Edit", edit_admin_user_path(admin))%>
						<%= link_to("Delete",delete_admin_user_path(admin))%>
					</td>
				</tr>
			<% end %>
		</table>
	</div>