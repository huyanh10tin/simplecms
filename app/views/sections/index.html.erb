<% @page_title = "Sections" %>
<%= link_to("<< Back to Pages",pages_path(:subject_id => @page.subject_id),:class => 'back-link')%>
<div class="sections index">
	<h2>Sections</h2>
	<%= image_tag('plus_sign.png',:size => '11x11',:alt => '+')%>
	<%= link_to("Add New Section",sections_new_path(@section,:page_id => @page.id),:class => 'action new') %>
	<table class="listing" summary="Subject list">
		<tr class="header">
			<th>Position</th>
			<th>Page_id</th>
			<th>Name</th>
			
			<th>Visible</th>
			<th>Content_type</th>
			<th>Content</th>
			<th>Action</th>
		</tr>
	
	<% @sections.each do |section| %>
	<tr>
		<td><%= section.position %></td>
		<td><%= section.page_id %></td>
		<td><%= section.name %></td>
		
		<td class="center"><%= status_tag(section.visible) %></td>
		
		<td><%= section.content_type %></td>
		<td><%= section.content %></td>
		
		<td class="actions">
			<%= link_to("Show",section_path(section,:page_id => @page.id), :class => 'action show')%>
			<%= link_to("Edit",edit_section_path(section,:page_id => @page.id), :class => 'action edit')%>
			<%= link_to("Delete",delete_section_path(section,:page_id => @page.id), :class => 'action delete')%>
		</td>
	</tr>
	<% end %>
	</table>
</div>