	<%= error_messages_for(f.object) %>
	<table summary="Subject from fields">
		<tr>
			<th>Subject</th>
			<td><%= f.select(:subject_id,@subjects.map{|p| [ p.name , p.id ]}) %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name) %></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%= f.text_field(:permalink) %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= f.select(:position,1..@page_count) %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= f.check_box(:visible) %></td>
		</tr>
		<tr>
			<th>Date</th>
			<td><%= f.datetime_select(:created_at,:order => [:month,:day,:year]) %></td>
		</tr>
	</table>