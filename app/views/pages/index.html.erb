<% @page_title = "Pages" %>
<div class="pages index">
	<h2>Pages</h2>
	<%= image_tag('plus_sign.png',:size => '11x11',:alt => '+')%>
	<%= link_to("Add New Pages", new_page_path ,:class => 'action new') %>
	<table class="listing" summary="pages list">
		<tr class="header">
			
			<th>Subject_id</th>
			<th>Name</th>
			<th>Permalink</th>
			<th>Position</th>
			<th>Visible</th>
			<th>Section</th>
			<th>Action</th>
		</tr>
	
	<% @pages.each do |page| %>
	<tr>
		<td><%= page.subject_id %></td>
		<td><%= page.name %></td>
		<td><%= page.permalink %></td>
		<td><%= page.position %></td>
		<td class="center"><%= status_tag(page.visible)%></td>
		<td class="center"><%= page.sections.size%></td>
		<td class="actions">
			<%= link_to("Show",page_path(page), :class => 'action show')%>
			<%= link_to("Edit",edit_page_path(page), :class => 'action edit')%>
			<%= link_to("Delete",delete_page_path(page), :class => 'action delete')%>
		</td>
	</tr>
	<% end %>
	</table>
</div>