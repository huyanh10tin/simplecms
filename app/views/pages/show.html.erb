
<%= link_to("<< Back to List",pages_path,:class =>'back-link')%>
<div class="pages show">
	<h2>Show Pages</h2>
	
	<table summary="Page detail view">
		<tr>
			<th>Subject</th>
			<td><%= @page.subject_id %></td>

		</tr>
		<tr>
			<th>Name</th>
			<td><%= @page.name %></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%= @page.permalink %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @page.position %></td>
		</tr>
		<tr>
			<th>Visible :</th>
			<td><%= status_tag(@page.visible)%></td>
		</tr>
		<tr>
			<th>Created at</th>
			<td><%= @page.created_at %></td>
		</tr>
		<tr>
			<th>Updated at</th>
			<td><%= @page.updated_at %></td>
		</tr>
	</table>
</div>